<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>icon</tag>
	<tagClass>com.googlecode.gmaps4jsf.component.icon.IconTag</tagClass>
	<componentClass>com.googlecode.gmaps4jsf.component.icon.Icon</componentClass>
	<componentType>com.googlecode.gmaps4jsf.Icon</componentType>
	<componentFamily>com.googlecode.gmaps4jsf</componentFamily>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>imageURL</name>
			<required>true</required>
			<type>java.lang.String</type>				
			<description>
			This attribute determines the icon image URL.
			</description>
		</attribute>								

		<attribute>
			<name>shadowImageURL</name>
			<required>false</required>
			<type>java.lang.String</type>				
			<description>
			This attribute determines the icon shadow image URL.
			</description>
		</attribute>		
		
		<attribute>
			<name>width</name>
			<required>false</required>
			<type>java.lang.String</type>		
			<defaultValue>20</defaultValue>						
			<description>
			This attribute determines the icon image width.
			</description>
		</attribute>
		
		<attribute>
			<name>height</name>
			<required>false</required>
			<type>java.lang.String</type>		
			<defaultValue>34</defaultValue>						
			<description>
			This attribute determines the icon image height.
			</description>
		</attribute>
		
		<attribute>
			<name>shadowWidth</name>
			<required>false</required>
			<type>java.lang.String</type>	
			<defaultValue>37</defaultValue>							
			<description>
			This attribute determines the icon shadow image width.
			</description>
		</attribute>
		
		<attribute>
			<name>shadowHeight</name>
			<required>false</required>
			<type>java.lang.String</type>		
			<defaultValue>34</defaultValue>						
			<description>
			This attribute determines the icon shadow image height.
			</description>
		</attribute>		
		
		<attribute>
			<name>xCoordAnchor</name>
			<required>false</required>
			<type>java.lang.String</type>	
			<defaultValue>9</defaultValue>							
			<description>
			The X coordinate relative to the top left corner of the icon image at which this icon 
			is anchored to the map.
			</description>
		</attribute>	
		
		<attribute>
			<name>yCoordAnchor</name>
			<required>false</required>
			<type>java.lang.String</type>	
			<defaultValue>34</defaultValue>							
			<description>
			The Y coordinate relative to the top left corner of the icon image at which this icon 
			is anchored to the map.
			</description>
		</attribute>
		
		<attribute>
			<name>xCoordInfoWindowAnchor</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>9</defaultValue>								
			<description>
			The X coordinate relative to the top left corner of the icon image at which the info 
			window is anchored to this icon.
			</description>
		</attribute>	
		
		<attribute>
			<name>yCoordInfoWindowAnchor</name>
			<required>false</required>
			<type>java.lang.String</type>	
			<defaultValue>2</defaultValue>							
			<description>
			The Y coordinate relative to the top left corner of the icon image at which the info 
			window is anchored to this icon.
			</description>
		</attribute>														
		
	</attributes>
</component>